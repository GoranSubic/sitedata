{% extends 'SiteDataBundle:Default:base.html.twig' %}

{% block first %}
    <h2>This is example of DOMCrawler from html page</h2>
    <h4><a href="http://www.olala.co.rs/orders/">http://www.olala.co.rs/orders/</a></h4>
    <br />
    <div style="float: left; border-color: chocolate; margin-right: 10px; width: 30%">
        <a href="{{ path('select') }}">Go to navigation page</a>
    </div>
{% endblock %}

{% block form %}
    <br />
    <ul id="showData">

        {% for array in showData %}
            <div style="float: left; border-color: chocolate; margin-right: 10px; width: 30%">
               <h4>Data {{ loop.index }}. about article from html page:</h4>
                <div style="float: left; margin-right: 50px;">
                    <a href="{{ array[3] }}" target="_blank">
                        <img src={{ array[3] }} style="width:100px;height:100px">
                    </a>
                </div>
                <div class="form-group" style="float: left">
                    {% for item in array %}
                        {% if loop.last %}
                            <li>
                                <a href="{{ array[3] }}" target="_blank">
                                    Show on site
                                </a>
                            </li>
                        {% else %}
                            <li>{{ item }}</li>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        <br />

    </ul>

    <br />

    {#<div style="float: left; margin: 30px">
        <br />
        Html iz forme je:
        <br />
        {{ html }}
    </div>#}
{% endblock %}